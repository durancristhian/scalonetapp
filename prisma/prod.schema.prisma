// SCHEMA USED IN PROD
// It should match schema.prisma but have a different datasource

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  matchId Int
  match   Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
}

model Match {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  // Since Prisma's sqlite integration doesn't support JSON fields, we need to workaround this by converting the teams array to an stringified version back and forth. It's really ugly, I know
  teams     String   @default("[]")

  // Relationships
  players Player[]
}
