// SCHEMA USED IN DEV
// It should match prod.schema.prisma but have a different datasource

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  matchId Int
  match   Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
}

model Match {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String

  // Relationships
  players Player[]
}
